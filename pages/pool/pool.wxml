<!--pages/pool/pool.wxml-->
<view class='amountBg'>
  <view class='img'>
    <open-data type="userAvatarUrl"></open-data>
  </view>
  <view class='account'>
    <view class='nick-name'>
      <open-data type="userNickName" lang="zh_CN"></open-data>
    </view>
    <view class='address'>
      <open-data type="userCountry" lang="zh_CN"></open-data>·
      <open-data type="userProvince" lang="zh_CN"></open-data>·
      <open-data type="userCity" lang="zh_CN"></open-data>
    </view>
  </view>
</view>

<!-- 我的-个人中心 -->
<view class='content'>
  
  <!-- 矿池概览 -->
  <!-- <view class='line'></view> -->
  <view class='item' bindtap='onPoolClick'>
    <view class='icon'>
      <image src='../../assets/images/setting/pool.png' style="width:22px;height:21px;"></image>
    </view>
    <view class='itemName'>
      <view>矿池概览</view>
    </view>
    <view class='right'><image src='../../assets/images/setting/open.png' style="width:22px;height:21px;"></image></view>
  </view>
 
  <!-- 我的矿机 -->
  <view class='hr'></view>
  <view class='item' bindtap='onWorkerClick'>
    <view class='icon'>
      <image src='../../assets/images/setting/server.png' style="width:22px;height:21px;"></image>
    </view>
    <view class='itemName'>
      <view>我的矿工</view>
    </view>
    <view class='right'><image src='../../assets/images/setting/open.png' style="width:22px;height:21px;"></image></view>
  </view>

  <!-- 转账记录 -->
  <view class='hr'></view>
  <view class='item' bindtap='onAccountClick'>
    <view class='icon'>
      <image src='../../assets/images/setting/account.png' style="width:22px;height:21px;"></image>
    </view>
    <view class='itemName'>
      <view>支付记录</view>
    </view>
    <view class='right'><image src='../../assets/images/setting/open.png' style="width:22px;height:21px;"></image></view>
  </view>

  

</view>
