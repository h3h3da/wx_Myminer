<!--pages/setting/setting.wxml-->
<view class='amountBg'>
  <view class='img'>
    <open-data type="userAvatarUrl"></open-data>
  </view>
  <view class='account'>
    <view class='nick-name'>
      <open-data type="userNickName" lang="zh_CN"></open-data>
    </view>
    <view class='address'>
      <open-data type="userCountry" lang="zh_CN"></open-data>·
      <open-data type="userProvince" lang="zh_CN"></open-data>·
      <open-data type="userCity" lang="zh_CN"></open-data>
    </view>
  </view>
</view>

<!-- 我的-个人中心 -->
<view class='content'>
  <!-- 我的钱包 -->
   <!-- <view class='line'></view> -->
  <view class='item' bindtap='onWalletClick'>
    <view class='icon'>
      <image src='../../assets/images/wallet/wallet.png' style="width:22px;height:21px;"></image>
    </view>
    <view class='itemName'>
      <view>我的钱包</view>
    </view>
    <view class='right'><image src='../../assets/images/setting/open.png' style="width:22px;height:21px;"></image></view>
  </view>

  <!-- 交易记录 -->
  <view class='hr'></view>
  <view class='item' bindtap='onTransactionClick'>
    <view class='icon'>
      <image src='../../assets/images/transaction/transactions.png' style="width:22px;height:21px;"></image>
    </view>
    <view class='itemName'>
      <view>交易记录</view>
    </view>
    <view class='right'><image src='../../assets/images/setting/open.png' style="width:22px;height:21px;"></image></view>
  </view>

  <!-- 帮助中心 -->
  <view class='hr'></view>
  <view class='item' bindtap='onHelpClick'>
    <view class='icon'>
      <image src='../../assets/images/setting/help.png' style="width:22px;height:21px;"></image>
    </view>
    <view class='itemName'>
      <view>帮助中心</view>
    </view>
    <view class='right'><image src='../../assets/images/setting/open.png' style="width:22px;height:21px;"></image></view>
  </view>

  <!-- 关于我们 -->
  <view class='hr'></view>
  <view class='item' bindtap='onAboutClick'>
    <view class='icon'>
      <image src='../../assets/images/setting/aboutus.png' style="width:22px;height:21px;"></image>
    </view>
    <view class='itemName'>
      <view>关于我们</view>
    </view>
    <view class='right'><text>V 1.1.0</text></view>
  </view>

</view>